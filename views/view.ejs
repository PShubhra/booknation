        $('.book-overlay').hover(function(){
            $(this).addClass("mouse-on");
            $(this).find('.book-icons').show();
        },function(){
            $(this).removeClass("mouse-on");
            $(this).find('.book-icons').hide();
        });
    </script>    -->
</body>
</html>